<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingBottom="10dp"
    android:background="@drawable/background2"
    android:gravity="center"
    android:id="@+id/menu"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        >
            <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_shortcut_settings"
            android:visibility="visible"
            tools:ignore="ContentDescription,InefficientWeight" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/profile"
        android:background="@null"
        android:paddingTop="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_shortcut_perm_identity"
        android:visibility="visible" />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/profile"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/FriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_shortcut_people_outline"
        android:adjustViewBounds="true"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight"
        android:paddingTop="25dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/friends"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/groupsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:paddingTop="25dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_shortcut_group_add"
        android:text="@string/group"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight" />
    <TextView
        android:id="@+id/groupsButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/groupsButtonText"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>


    <ImageButton
        android:id="@+id/LocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:text="@string/profile"
        android:src="@drawable/ic_shortcut_location_on"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight"
        android:paddingTop="25dp"
        android:background="@null"
        />

    <TextView
        android:id="@+id/LocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/viewMap"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>


</LinearLayout>