<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/background2"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/menu"
    >


    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_shortcut_perm_identity"
        android:visibility="visible"
        android:contentDescription="@string/profile"
        android:background="@null"
        android:paddingTop="25dp"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/profile"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/groupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_shortcut_people_outline"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight"
        android:paddingTop="25dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/groupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/group"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/LocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:text="@string/profile"
        android:src="@drawable/ic_shortcut_location_on"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight"
        android:paddingTop="25dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/LocationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/viewMap"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/SettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:text="@string/group"
        android:src="@drawable/ic_shortcut_settings"
        android:visibility="visible"
        tools:ignore="ContentDescription,InefficientWeight"
        android:paddingTop="25dp"
        android:background="@null"
        />
    <TextView
        android:id="@+id/SettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/settings"
        android:paddingBottom="25dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="16sp"/>

</LinearLayout>